@model TurnOver.Models.Concierto

@{
    ViewData["Title"] = "Eliminar Concierto";
}
<link rel="stylesheet" href="~/css/BorrarConcierto.css" />
<h2>Eliminar Concierto</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (Model != null)
{
    <div>
        <h4>¿Estás seguro de que deseas eliminar el concierto?</h4>
        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.nombre_concierto</dd>
            <dt class="col-sm-2">Fecha</dt>
            <dd class="col-sm-10">@Model.fecha_concierto.ToShortDateString()</dd>
            <dt class="col-sm-2">Ubicación</dt>
            <dd class="col-sm-10">@Model.ubicacion</dd>
        </dl>
        <form method="post" asp-action="ConfirmarBorrarConcierto" asp-controller="Conciertos">
            <input type="hidden" name="id_concierto" value="@Model.id_concierto" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="ListaConciertos" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
}
else
{
    <div class="alert alert-warning">
        No se encontró el concierto.
    </div>
}

